// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Post {
    id        Int      @id @default(autoincrement())
    name      String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@index([name])
}



model Members{
    
    id                         Int      @id @default(autoincrement())
    image                      String?
    lastName                   String
    firstName                  String
    middleName                 String?
    fatherLastName             String?
    fatherFirstName            String?
    fatherMiddleName           String?
    motherLastName             String?
    motherFirstName            String?
    motherMiddleName           String?
    dateofBirth                DateTime
    placeOfbirth               String
    sex                        GENDER
    height                     String?
    weight                     String?
    presentAddress             String?
    occupation                 String?
    maritalStatus              MaritalStatus?
    bloodType                  String?
    jobExperience              Json?
    cellphoneNumber            String?
    homeTelephoneNumber        String?
    email                      String?
    educationalAttainment      EducationalAttainment?
    spouseLastName             String?
    spouseFirstName            String?
    spouseMiddleName           String?


    nameOfChildrenAndAge       Json?
    birthOrder                 String?
    citizenship                String?    @default("Filipino")
    previousReligion           String?
    dateAcceptedTheLord        DateTime?
    personLedYouToTheLord      String?
    firstDayOfChurchAttendance DateTime?
    dateWaterBaptized          DateTime?
    dateSpiritBaptized         DateTime?
    attendance                 AttendanceMembers[]
    formFilledUpBy             FormFilledUpBy?
    status                    status @default(ACTIVE)

                     
}

model FormFilledUpBy {
    id                         Int      @id @default(autoincrement())
    formFilledUpByWho          String?
    dateFilledUp               DateTime?
    idNo                       String?
    verified                   String?
    noted                      String?
    encoded                    String?

    memberId                   Int?      @unique
    member                     Members?  @relation(fields: [memberId], references: [id])
    
}

model Attendance {
    id                         Int      @id @default(autoincrement())
    attendanceName             String   @default("Sunday Service")
    date                       DateTime @unique
    members                    AttendanceMembers[]
}
model AttendanceMembers {
    id                         Int      @id @default(autoincrement())
    memberId                   Int
    attendanceId               Int

    member                     Members   @relation(fields: [memberId], references: [id])
    attendance                 Attendance @relation(fields: [attendanceId], references: [id])

    @@unique([memberId, attendanceId])
}   




enum GENDER {
    MALE
    FEMALE
}

enum MaritalStatus {
    SINGLE
    MARRIED
    WIDOWED 
    DIVORCED
    SEPARATED
}

enum EducationalAttainment {
  
PRESCHOOL
ELEMENTARY
HIGHSCHOOL
SENIORHIGH
COLLEGE
DEGREE_HOLDER
}

enum status {
  
ACTIVE
DEACTIVE
}



